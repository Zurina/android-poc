<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:src="@drawable/bike" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView1"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ping"
                android:gravity="center"
                android:text="Barcelona, Spain"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fdfcfc"
                android:textSize="16dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp">


            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/person"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1" />

            <TextView
                android:id="@+id/myImageViewText3"
                android:layout_width="66dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Biel Moro"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/dw3" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/heart" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/tag" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_green_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="159dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="Camera"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="NIKON D3200"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="Focal Length"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="18.0mm"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="ISO"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="100"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="Aperture"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="f/5.0"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="Shutter Speed"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="1/125s"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center|left"
                    android:text="Dimensions"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:text="3906 x 4882"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_green_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Views"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="8.8M"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Downloads"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="99.1K"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Likes"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1.8K"
                    android:textSize="12dp"
                    android:textColor="#6E6E6E" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_green_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:background="@drawable/rounded_corners"
                android:padding="5dp"
                android:text="Barcelona"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:background="@drawable/rounded_corners"
                android:padding="5dp"
                android:text="spain"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
